// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/data.db"
}

model Hero {
  id        Int          @id @default(autoincrement())
  name      String
  price     Int
  saves     Int
  fans      Int
  powers    Power[]
  avatar    AvatarImage?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model AvatarImage {
  id          Int    @id @default(autoincrement())
  filename    String
  contentType String
  image       Bytes
  hero        Hero   @relation(fields: [heroId], references: [id])
  heroId      Int    @unique
}

model Power {
  id     Int    @id @default(autoincrement())
  name   String
  heroes Hero[]
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  isAdmin  Boolean
}
